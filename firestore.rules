rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Assets collection - Asset Manager metadata
    match /assets/{assetId} {
      // Read: Only owner can read their assets
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Create: Only authenticated users, must set correct userId
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['id', 'userId', 'fileName', 'driveFileId', 'fileHash', 'mimeType', 'fileSize', 'source', 'tags', 'createdAt', 'updatedAt', 'usageCount']);
      
      // Update: Only owner can update, cannot change userId or critical fields
      allow update: if isAuthenticated() 
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId
        && request.resource.data.fileHash == resource.data.fileHash;
      
      // Delete: Only owner can delete
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Asset Data collection - Actual image data
    match /assetData/{storageId} {
      // Read: Only owner can read their asset data
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Create: Only authenticated users, must set correct userId
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['userId', 'dataUrl', 'mimeType', 'size', 'createdAt']);
      
      // Update: Not allowed (asset data is immutable)
      allow update: if false;
      
      // Delete: Only owner can delete
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Audit logs (if used)
    match /auditLogs/{logId} {
      allow read: if false; // Only backend can read
      allow write: if false; // Only backend can write
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
