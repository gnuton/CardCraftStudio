{
  "name": "cardcraft-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@cardcraft/web",
    "dev:backend": "npm run dev --workspace=@cardcraft/backend",
    "dev": "concurrently -n \"backend,web\" -c \"magenta,cyan\" \"npm run dev:backend\" \"npm run dev:web\"",
    "build:web": "npm run build --workspace=@cardcraft/web",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "setup:cloud-env": "node scripts/setup-cloud-env.js",
    "setup:github-secrets": "node scripts/setup-github-secrets.js",
    "fill-env": "node scripts/fill-env.js",
    "fill-env:auto": "node scripts/fill-env.js --auto"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.0.0"
  }
}